---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ProjectCard from '../components/ProjectCard.astro';
---

<Layout>
	<Header />

	<main role="main" id="main-content">
		<section id="about" aria-label="About section - Background and skills">
			<div class="container">
				<div class="about-content">
					<div class="about-text">
						<h2>About Me</h2>
						<p>Second-semester Systems Analysis student from Vila Velha, Esp√≠rito Santo. Passionate about web development and problem-solving, with experience in administrative roles managing data and communication strategies. Skilled in Astro, Git, and Neovim.</p>
						
						<div class="skills">
							<h3>Technologies I work with:</h3>
							<div class="skills-grid" role="list" aria-label="List of technologies and skills">
								<span class="skill-tag" role="listitem">Astro</span>
								<span class="skill-tag" role="listitem">Git</span>
								<span class="skill-tag" role="listitem">Neovim</span>
								<span class="skill-tag" role="listitem">HTML/CSS</span>
								<span class="skill-tag" role="listitem">JavaScript</span>
								<span class="skill-tag" role="listitem">Web Development</span>
							</div>
						</div>
					</div>
					
					<div class="about-image">
						<img 
							src="/profile-placeholder.svg" 
							alt="Professional placeholder photo representing Olavo Stauros, Systems Analysis Student" 
							class="profile-image" 
							width="300" 
							height="300"
							loading="lazy"
						/>
					</div>
				</div>
			</div>
		</section>

		<section id="projects" aria-label="Projects section - Portfolio of work">
			<div class="container">
				<h2>My Projects</h2>
				<p class="section-subtitle">Here are some of the projects I've been working on</p>
				
				<div class="projects-grid">
					<ProjectCard 
						title="Personal Website"
						description="A modern, responsive personal website built with Astro. Features a clean design, smooth animations, and optimized performance."
						technologies={["Astro", "CSS", "HTML", "JavaScript"]}
						status="Live"
						githubUrl="https://github.com/olavostauros"
						liveUrl="#"
						imageUrl="/project-1.svg"
					/>
					
					<ProjectCard 
						title="Fitness Landing Page"
						description="A responsive landing page for a fitness center, showcasing services, trainers, and membership plans with modern UI/UX design."
						technologies={["HTML", "CSS", "JavaScript"]}
						status="Completed"
						githubUrl="https://github.com/olavostauros"
						imageUrl="/project-2.svg"
					/>
					
					<ProjectCard 
						title="Portfolio Project"
						description="An upcoming project that will showcase my development skills and learning journey. Stay tuned for updates!"
						technologies={["To be determined"]}
						status="Planning"
						imageUrl="/project-3.svg"
					/>
				</div>
			</div>
		</section>
	</main>

	<Footer />
</Layout>

<style>
	/* About Section Styles */
	#about {
		padding: 5rem 0;
		background: var(--color-light);
	}

	.about-content {
		display: grid;
		grid-template-columns: 2fr 1fr;
		gap: 4rem;
		align-items: center;
	}

	.about-text h2 {
		color: var(--color-primary);
		margin-bottom: 1.5rem;
		font-size: 2.5rem;
	}

	.about-text p {
		font-size: 1.1rem;
		line-height: 1.8;
		color: var(--color-text);
		margin-bottom: 2rem;
	}

	.skills h3 {
		color: var(--color-primary);
		margin-bottom: 1rem;
		font-size: 1.25rem;
	}

	.skills-grid {
		display: flex;
		flex-wrap: wrap;
		gap: 0.75rem;
	}

	.skill-tag {
		background: var(--color-primary);
		color: white;
		padding: 0.5rem 1rem;
		border-radius: 25px;
		font-size: 0.875rem;
		font-weight: 500;
	}

	.about-image {
		display: flex;
		justify-content: center;
	}

	.profile-placeholder {
		width: 250px;
		height: 250px;
		background: rgba(59, 130, 246, 0.1);
		border-radius: 50%;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		border: 3px dashed var(--color-primary);
		color: var(--color-primary);
	}

	.profile-placeholder p {
		margin-top: 1rem;
		font-weight: 500;
	}

	/* Projects Section Styles */
	#projects {
		padding: 5rem 0;
		background: white;
	}

	#projects h2 {
		color: var(--color-primary);
		text-align: center;
		margin-bottom: 1rem;
		font-size: 2.5rem;
	}

	.section-subtitle {
		text-align: center;
		color: var(--color-text);
		margin-bottom: 3rem;
		font-size: 1.1rem;
	}

	.projects-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
		margin-top: 2rem;
	}

	/* Mobile Responsive */
	@media (max-width: 768px) {
		.about-content {
			grid-template-columns: 1fr;
			gap: 2rem;
			text-align: center;
		}

		.about-text h2,
		#projects h2 {
			font-size: 2rem;
		}

		.profile-placeholder {
			width: 200px;
			height: 200px;
		}

		.projects-grid {
			grid-template-columns: 1fr;
		}

		#about,
		#projects {
			padding: 3rem 0;
		}
	}
</style>
