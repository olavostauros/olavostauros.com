---
import Layout from '../layouts/Layout.astro';
---

<Layout>
	<main>
		<h1>Welcome to Olavo Stauros</h1>
		<p>Personal website coming soon...</p>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	
	p {
		text-align: center;
		margin-bottom: 2em;
	}
	
	body {
		background: linear-gradient(45deg, #0f0f23 0%, #1a1a2e 50%, #16213e 100%);
		min-height: 100vh;
	}
</style>
