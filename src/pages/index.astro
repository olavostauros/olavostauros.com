---
import Layout from '../layouts/Layout.astro';
---

<Layout>
	<header>
		<nav role="navigation" aria-label="Main navigation">
			<div class="nav-container">
				<div class="nav-logo">
					<a href="#hero">Olavo Stauros</a>
				</div>
				<div class="nav-links">
					<a href="#hero">Home</a>
					<a href="#about">About</a>
					<a href="#projects">Projects</a>
					<a href="#contact">Contact</a>
				</div>
			</div>
		</nav>
	</header>

	<main>
		<section id="hero" aria-label="Hero section">
			<div class="hero-content">
				<h1>Hero Section</h1>
				<p>Full-width introduction area placeholder</p>
			</div>
		</section>

		<section id="about" aria-label="About section">
			<div class="container">
				<h2>About</h2>
				<p>Personal bio section placeholder</p>
			</div>
		</section>

		<section id="projects" aria-label="Projects section">
			<div class="container">
				<h2>Projects</h2>
				<div class="projects-grid">
					<div class="project-card">
						<h3>Project 1</h3>
						<p>Portfolio grid layout placeholder</p>
					</div>
					<div class="project-card">
						<h3>Project 2</h3>
						<p>Portfolio grid layout placeholder</p>
					</div>
					<div class="project-card">
						<h3>Project 3</h3>
						<p>Portfolio grid layout placeholder</p>
					</div>
				</div>
			</div>
		</section>
	</main>

	<footer id="contact" aria-label="Contact section">
		<div class="container">
			<h2>Contact</h2>
			<p>Footer with social links placeholder</p>
		</div>
	</footer>
</Layout>
